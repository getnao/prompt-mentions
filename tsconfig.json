{
  "compilerOptions": {
    // Module settings for ESM library
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "types": ["@testing-library/jest-dom/vitest"],
    // Output settings
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    // Library environment
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}